<h3 class="text-center">
    <u>
        Profile
    </u>
</h3>
<form id="form-userinfo" class="form-horizontal">
    <div class="row">
        <h4 class="text-left">
            Name
        </h4>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="fname" 
                       class="col-xs-2 control-label">
                    First:
                </label>
                <div class="col-xs-10">
                    <input type="text" 
                           class="form-control" 
                           name="fname" 
                           value="" 
                           placeholder="First Name" disabled>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="lname" 
                       class="col-xs-2 control-label">
                    Last:
                </label>
                <div class="col-xs-10">
                    <input type="text" 
                           class="form-control" 
                           name="lname" 
                           value="" 
                           placeholder="Last Name" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h4 class="text-left">
            Comm Methods
        </h4>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="email" 
                       class="col-xs-2 control-label">
                    Email:
                </label>
                <div class="col-xs-10">
                    <input type="text" 
                           class="form-control" 
                           name="email" 
                           value="" 
                           placeholder="name@email.com" disabled>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <label class="checkbox-inline">
                <input type="checkbox" 
                       name="comm_chat"
                       checked
                       disabled>
                Chat
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" 
                       name="comm_sms"
                       disabled>
                SMS
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" 
                       name="comm_push"
                       disabled>
                Push
            </label>   
        </div>
    </div>
    <div class="row">
        <h4 class="text-left">
            Password
        </h4>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="password1" 
                       class="col-xs-2 control-label">
                    New:
                </label>
                <div class="col-xs-10">
                    <input type="password" 
                           class="form-control" 
                           name="password1" 
                           id="password1"
                           placeholder="*******" disabled>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="password2" 
                       class="col-xs-2 control-label">
                    Again:
                </label>
                <div class="col-xs-10">
                    <input type="password" 
                           class="form-control" 
                           name="password2" 
                           id="password2"
                           placeholder="*******" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-right">
            <button type="submit" class="btn btn-default" disabled>Update</button>
        </div>
    </div>
</form>