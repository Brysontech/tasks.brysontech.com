<h3 class="text-center">
    <u>
        Edit Categories
    </u>
</h3>
<form class="form" id="form_categories">
    <h4>
        Add Category
    </h4>
    <div class="form-group row">
        <div class="col-8">
            <input type="text" 
                   class="form-control" 
                   name="category_name" 
                   id="category_name">
        </div>
        <div class="col-4">
            <button class="btn btn-success col-12">
                Submit
            </button>
        </div>
    </div>
</form>

<form class="form" id="form_categories_delete">
    <h4>
        Delete Category
    </h4>
    <div class="form-group row">
        <div class="col-4">
            <select class="form-control" name="select_category" id="select_category">
                <option value="1">
                    Default
                </option>
            </select>
        </div>
    </div>
</form>