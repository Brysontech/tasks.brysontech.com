<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="ep-top-40">
                Search Results
            </h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
        {% if results is not empty %}
            <table class="table table-hover table-striped table-dark">
                <thead class="thead-dark">
                    <th>
                        Task
                    </th>
                    <th>
                        Solution
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Updated
                    </th>
                    <th>
                        Complete
                    </th>
                </thead>
                <tbody>
            {% for result in results %}
                    <tr>
                        <td>
                            <a href="/application/task/{{result.id}}" title="{{result.description}}">{{result.description}}</a>
                        </td>
                        <td>
                            {{result.solution}}
                        </td>
                        <td>
                            {{result.created}}                             
                        </td>
                        <td>
                            {{result.updated}}
                        </td>
                        <td>
                            {% if ('results.complete' == 1) %}
                                Yes
                            {%elseif ('result.complete' == 0) %}
                                No
                            {%endif%}
                        </td>
                    </tr>           
            {% endfor %}
            </tbody>
        {% endif %}
        </div>
    </div>
</div>
        