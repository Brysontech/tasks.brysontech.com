<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="ep-top-40">
                Search Results
            </h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
        {% if results is not empty %}
            <table class="table table-hover table-striped table-dark">
                <thead class="thead-dark">
                    Tasks
                </thead>
                <tbody>
            {% for result in results %}
                    <tr>
                        <td>
                            <a href="/application/task/{{result.id}}" title="{{result.description}}">{{result.description}}</a>
                        </td>
                        <td>
                            Date Created:
                            <p  id="dateC">
                            
                            </p> 
                            <script>
                                
                                var dc = new Date({{result.created}} * 1000);
                                console.log(dc);
                                document.getElementById("dateC").innerHTML = dc;
                                
                            </script>
                        </td>                        
                    </tr>           
            {% endfor %}
            </tbody>
        {% endif %}
        </div>
    </div>
</div>
        