<form action="/login" 
            method="POST" 
            name="_login">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
  <input type="hidden" name="_target_path" value="application" />
  <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="email" name="_username" aria-describedby="emailHelp" placeholder="Enter email">
      <label for="password" class="ep-top-20">Password</label>
      <input type="password" class="form-control" id="password" name="_password" aria-describedby="passwordinput" placeholder="Enter Password">
  </div>
  <div class="form-group ep-top-20">
      <button type="submit" 
              class="btn btn-primary col-md-6 offset-md-3">
          Submit
      </button>
      {% if message is defined %}
            <br />
            <br />
            <div class="text-center">{{ message }}</div>
        {% endif %}
  </div>
</form>
<div class="row ep-top-20">
    <div class="col-12 text-center">
        {% if fbButton is defined %}
            {{ fbButton|raw }}
        {% endif %}
    </div>
</div>