<form action="/login" 
      method="POST" 
      name="_login"
      id="form_login">
    <div class="form-group">
        <label for="email">
            Email address
        </label>
        <input type="email"
               class="form-control"
               id="email"
               name="_username"
               aria-describedby="emailHelp"
               placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="password">
            Password
        </label>
        <input type="password"
               class="form-control"
               id="password"
               name="_password"
               aria-describedby="passwordinput"
               placeholder="Enter Password">
    </div>
    <div class="form-group">
        <button type="submit" 
                class="btn btn-primary col-md-6 offset-md-3">
            Submit
        </button>
    </div>
    <input type="hidden" 
           name="_csrf_token" 
           value="{{ csrf_token('authenticate') }}">
    <input type="hidden" 
           name="_target_path" 
           value="application"/>
</form>
{% if error is defined %}
<div class="row">
    <div class="col-12 text-center">
        {{ error.message }}
    </div>    
</div>
{% endif %}
<div class="row">
    <div class="col-12 text-center">
        {% if fbButton is defined %}
            {{ fbButton|raw }}
        {% endif %}
    </div>
</div>